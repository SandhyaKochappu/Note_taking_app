  {
  "openapi": "3.0.2",
  "info": {
    "title": "Note taking API",
    "description": "This is a simple Express API for a note taking application. It supports note creation, editing, deleting and posting notes to the database",
    "version": "1.0.0",
    "contact": {
      "email": "sandhyakochappu@gmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "paths": {
    "/api/login": {
      "get": {
        "summary": "User login",
        "description": "For the user to enter their login and password",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "enum": ["true", "false"]
                    },
                    "cities": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "district": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/register": {
      "post": {
        "summary": "User registration",
        "description": "For first time user registration",
        "parameters": [
          {
            "name": "register info",
            "in": "path",
            "description": "username and password.",
            "required": true,
            "schema": {
              "type": "string",
              "example": "root"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "enum": ["true", "false"]
                    },
                    "cities": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "district": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  
,

"/api/notes": {
      "get": {
        "summary": "Retrieve notes",
        "description": "Retrieve existing notes from the database",
        "parameters": [
          {
            "name": "notes details",
            "in": "path",
            "description": "title content.",
            "required": true,
            "schema": {
              "type": "string",
              "example": "root"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "enum": ["true", "false"]
                    },
                    "cities": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "district": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

"/api/notes/:id": {
      "get": {
        "summary": "Retrieve a particular note",
        "description": "Retrieve existing notes from the database",
        "parameters": [
          {
            "name": "notes details",
            "in": "path",
            "description": "title content.",
            "required": true,
            "schema": {
              "type": "string",
              "example": "root"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "enum": ["true", "false"]
                    },
                    "cities": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "district": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }


  }
}
